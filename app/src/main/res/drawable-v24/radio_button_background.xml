<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" /> <!-- Adjust the radius to control the curvature -->
            <solid android:color="@color/transparentBackground" /> <!-- Set the background color for checked state -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" /> <!-- Adjust the radius to control the curvature -->
            <solid android:color="@color/transparentBackground" /> <!-- Set the background color for unchecked state -->
        </shape>
    </item>
</selector>
